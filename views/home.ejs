<!DOCTYPE html>
<html>
<head>
    <title>PDMS.Com</title>    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">   
    <link rel="stylesheet" href="/public/css/home_body.css">
    <link rel="stylesheet" href="/public/css/navbar.css">
    <link rel="stylesheet" href="/public/css/footer.css">
</head>
<body>
    <!-- Logo -->
    <div class="text-center my-3">
        <a href="/"><img src="/public/PDMSLOGO.png" alt="PDMS Logo"></a>
    </div>

    <!-- Navbar -->
    <% if (loggedin) { %>
        <%- include('partials/navbar2.ejs') %>
        <div class="container mt-3">
            <h3>Welcome, <%= username %>!</h3>
        </div>
    <% } else { %>
        <%- include('partials/navbar1.ejs') %>
    <% } %>

    <!-- Search & Filter Form -->
    <div class="container my-4">
        <form method="get" action="/" class="row g-3 align-items-center">
            <div class="col-auto">
                <input type="text" name="search" class="form-control" placeholder="Search by code or name" value="<%= searchQuery %>">
            </div>
            <div class="col-auto">
                <select name="category" class="form-select">
                    <option value="all" <%= selectedCategory === 'all' ? 'selected' : '' %>>All Categories</option>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat.productGroup %>" <%= selectedCategory === cat.productGroup ? 'selected' : '' %>>
                            <%= cat.productGroup %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <!-- Products Table -->
    <div class="container table-responsive">
        <% if (products.length === 0) { %>
            <p>No products found.</p>
        <% } else { %>
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Trade Price</th>
                        <th>RRP Price</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.code %></td>
                            <td><%= product.name %></td>
                            <td><%= product.productGroup %></td>
                            <td><%= product.tradePrice %></td>
                            <td><%= product.rrpPrice %></td>
                            <td>
                                <% if (product.image) { %>
                                    <img src="/uploads/<%= product.image %>" width="80" alt="<%= product.name %>">
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
