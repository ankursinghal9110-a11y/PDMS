    <html>
        <head>
            <title>PDMS.Com</title>
            <link href=https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css rel="stylesheet"> 
                <link rel="stylesheet" href="public/css/headerStyle.css"> 
                <%- include('partials/header.ejs') %>
        </head>
        <body>
        <link rel="stylesheet" href="public/css/navbar.css">
        <%- include('partials/navbar2.ejs') %>
        <h2>Welcome, <%= username %></h2>
        <h3>Existing Products</h3>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Trade Price</th>
                    <th>RRP Price</th>
                    <th>Product Group</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
    <% products.forEach(product => { %>
        <tr>
            <td><%= product.code %></td>
            <td><%= product.name %></td>
            <td><%= product.tradePrice %></td>
            <td><%= product.rrpPrice %></td>
            <td><%= product.productGroup %></td>
            <td>
                <% if (product.image) { %>
                    <img src="/uploads/<%= product.image %>" alt="Product Image" width="80">
                <% } else { %>
                    No Image
                <% } %>
            </td>
        </tr>
    <% }) %>
</tbody>
        </table>


    </body>
            <link rel="stylesheet" href="public/css/footer.css">
        <%- include('partials/footer.ejs') %>
    </html>